<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上"/>
            <TextView
                android:id="@+id/element_k_stick_card_top"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:tag="k51"
                android:text="W"
                android:background="@drawable/enabled_square"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下"/>
            <TextView
                android:id="@+id/element_k_stick_card_down"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:tag="k47"
                android:text="S"
                android:background="@drawable/enabled_square"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="左"/>
            <TextView
                android:id="@+id/element_k_stick_card_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:tag="k29"
                android:text="A"
                android:background="@drawable/enabled_square"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="右"/>
            <TextView
                android:id="@+id/element_k_stick_card_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:tag="k32"
                android:text="D"
                android:background="@drawable/enabled_square"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="中"/>
            <TextView
                android:id="@+id/element_k_stick_card_middle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:tag="k59"
                android:text="Shift"
                android:background="@drawable/enabled_square"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>